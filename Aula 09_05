if (y=="x"):
    print("Tabuada do ",x)
    for i in range(1, 10+1):
        print(f"{i} x {x} = {i*x}")
elif(y=="+"):
    print("Tabuada do ",x)
    for i in range(1, 10+1):
        print(f"{i} + {x} = {i+x}")
else:
    print("Operação incorreta")
